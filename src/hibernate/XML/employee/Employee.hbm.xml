<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="hibernate.XML.employee.Employee" table="Employee">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="firstname" length="50" not-null="true" column="chvFirNam"/>
        <property name="lastname" length="50" not-null="true" column="chvLasNam"/>
        <property name="age" type="integer" column="intAge" />

    </class>

</hibernate-mapping>